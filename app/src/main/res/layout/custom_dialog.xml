<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="fill_parent"
    android:background="@drawable/gray_white_corner_border">

    <TextView
        android:id="@+id/text_Title_dialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="My Health Care Wishes"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_meesage_dialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_Title_dialog"
        android:gravity="center_horizontal"
        android:text="Please enter your name"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="normal" />

    <View
        android:id="@+id/divider_btn"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/text_meesage_dialog"
        android:layout_marginTop="10dp"
        android:background="@color/colorDarkGray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_btn"
        android:gravity="center">

        <Button
            android:id="@+id/dialogButtonOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:text="Ok" />
    </LinearLayout>

</RelativeLayout>